{% extends "::layout.html.twig" %}

{% block post_it_body %}
	<div id="view">
{% for message in app.session.flashbag.get('notice') %}
			<div class="alert alert-info" role="alert">
      {# On affiche tous les messages flash dont le nom est « info » #}
      
        <p> {{ message }}</p>
      {% endfor %}
      </div>

	<div class="row">
		
  				<h2 class="text-center">Vous êtes sure de supprimer l'annonce " {{ announce.title }} " ? </h2>
				
					<h4><span class="glyphicon glyphicon-triangle-right"></span> {{ announce.content }}</h4>
					<h4><span class="glyphicon glyphicon-info-sign"></span> {{ announce.company }}</h4>
					<h4><span class="glyphicon glyphicon-map-marker"></span> {{ announce.city }}</h4>
					<h4><span class="glyphicon glyphicon-user"></span> {{ announce.user.username }}</h4>
					<h4><span class="glyphicon glyphicon-user"></span> {{ announce.user.password }}</h4>
					<h4><span class="glyphicon glyphicon-user"></span> {{ pass }}</h4>
					<h4><span class="glyphicon glyphicon-calendar"> </span> {{ announce.date|date('d/m/Y') }}</h4>
      			<form action="{{ path('postit_announce_delete', {'id': announce.id}) }}" method="post">
      				 <label>Votre Mot de passe</label> : <input type="text" name="motdepasse" />
 					<input type="submit" value="Supprimer" class="btn btn-danger" />
    				{{ form_rest(form) }}
      			</form>
		</div>
 </div>
</div>




{% endblock %}
