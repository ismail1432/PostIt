    </div>
      {% endfor %}
<div class="row">
	<div class="col-md-8">
	<div class="well well-sm">
<form>
    <div class="form-group">
      <div class="col-xs-4">
        <input type="text" class="form-control" id="motcle" placeholder="Mot cle">
      </div>
      	<div class="col-xs-3">
        <div class="form-group">
     		<select class="form-control" name="Categorie" id="Categorie">
			<option>Categorie</option>
  			<option>Immobiler</option>
